<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="3dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        card_view:cardBackgroundColor="@android:color/white">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/_itmdes"
                style="@style/tst"
                android:lines="2"
                android:singleLine="false"
                android:layout_weight="0.25"
                android:drawablePadding="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_itmprice"
                android:layout_width="fill_parent"

                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/oName"
                android:layout_weight="0.75"
                android:gravity="left|center"
                android:singleLine="true"
                android:text=" $ 3.00"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="70dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="1.5">

            <TextView
                android:id="@+id/_itmno"
                style="@style/tst"
                android:layout_weight="0.25"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/_dicsqty"
                style="@style/tst"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/lprice"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text=""
                android:inputType="number"
                android:textColor="@color/bl"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/_itmmin"
                style="@style/tst"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/qty"
                android:layout_weight="0.32"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

            <!--<EditText-->
            <!--style="@style/tst"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_width="150dp"-->
            <!--/>-->
            <EditText
                android:id="@+id/_itmqty"
                style="@style/tst"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:layout_toRightOf="@+id/view_var"
                android:layout_weight="0.32"
                android:gravity="center"
                android:padding="1dp"
                android:inputType="number"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/_itmplus"
                style="@style/tst"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/edNum"
                android:layout_weight="0.32"
                android:gravity="center"
                android:padding="1dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="36sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/_itmadd"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:text="ADD"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>
</LinearLayout>